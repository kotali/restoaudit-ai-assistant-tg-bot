{
  "version": 2,
  "builds": [
    {
      "src": "api.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",  // Ловит все пути, включая / и /webhook
      "dest": "api.py"
    },
    {
      "src": "/webhook",  // Специально для Telegram
      "dest": "api.py"
    }
  ],
  "crons": [{
    "path": "/api/cron",
    "schedule": "0 0 * * *"
  }],

  "buildCommand": "pip install -r requirements.txt && python scripts/generate_docs.py && mkdocs build",
  "outputDirectory": "./docs"
}